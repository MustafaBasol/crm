
# Cloudflare Turnstile (Frontend)
# Public site key (can be embedded in client). If missing, captcha is skipped with warning.
VITE_TURNSTILE_SITE_KEY=
# Set to true to allow bypassing Turnstile locally (never enable in production)
VITE_CAPTCHA_DEV_BYPASS=false
# Frontend Environment Variables

# API Configuration
VITE_API_URL=http://localhost:3000

# Demo hesap bilgileri (sadece development için)
VITE_DEMO_EMAIL=demo@moneyflow.com
VITE_DEMO_PASSWORD=demo123

# Comptario Landing Page Configuration
VITE_LOGIN_URL=/login

# Uygulama ayarları
VITE_APP_NAME=Comptario
VITE_APP_VERSION=2.0.0

# Client-side Feature Flags - These are publicly visible!
VITE_ENABLE_ENCRYPTION=true
VITE_USE_SECURE_CRYPTO=true

# WARNING: NEVER put server encryption keys in VITE_ variables!
# Server encryption keys belong in apps/api/.env (not VITE_ prefixed)

# Security Features
VITE_ENABLE_CSP_REPORTING=true
VITE_ENABLE_RATE_LIMITING=true

# Auth email verification
# If true, the app won't auto-login after registration and will instruct users to verify email first
VITE_EMAIL_VERIFICATION_REQUIRED=true

# Backend email links base URL (used to generate verification/reset/invite links)
# Example: https://app.example.com
FRONTEND_URL=http://localhost:5174

# Optionally require verified email for login on backend
EMAIL_VERIFICATION_REQUIRED=true

# Development Settings
VITE_DEBUG_MODE=false
VITE_LOG_LEVEL=error

# === Email Configuration (Backend) ===
# mailersend | ses | smtp | log (varsayılan log)
MAIL_PROVIDER=mailersend
MAIL_FROM=Comptario <noreply@comptario.com>
MAIL_REPLY_TO=noreply@comptario.com

# MailerSend
# MAILERSEND_API_KEY=your_mailersend_api_token

# Amazon SES (alternatif)
AWS_REGION=us-central-1
# AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY
# AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_KEY
# SES_CONFIGURATION_SET=

# Prod'da yukarıdaki AWS_* değerlerini .env yerine secret store kullanın.
# SES sandbox ortamında alıcı adresler de doğrulanmış olmalı, aksi halde teslim olmaz.

